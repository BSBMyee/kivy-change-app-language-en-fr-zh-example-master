#:kivy 1.9.0

BoxLayout:
    _: app._ if app._ != None else str
    orientation: 'vertical'

    Label:
        text: root._('Hello World')

    BoxLayout:
        size_hint_y: None
        height: '48dp'
        spacing: '2dp'
        padding: '3dp'

        Button:
            text: root._('French')
            on_release: app.lang = 'fr'

        Button:
            text: root._('English')
            on_release: app.lang = 'en'

        Button:
            text: root._('Klingon')
            on_release: app.lang = 'tlh'

        MySpecialLabel:
            color: [1.0, 0.5, 0.5, 1.0]
