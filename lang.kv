#:kivy 1.9.0

<I18NLabel>:
    text: app._(self.source_text)

BoxLayout:
    orientation: 'vertical'

    I18NLabel:
        source_text: 'Hello World'

    BoxLayout:
        size_hint_y: None
        height: '48dp'
        spacing: '2dp'
        padding: '3dp'

        Button:
            text: app._(self.source_text)
            source_text: 'French'
            on_release: app.lang = 'fr'

        Button:
            text: app._(self.source_text)
            source_text: 'English'
            on_release: app.lang = 'en'

        Button:
            text: app._(self.source_text)
            source_text: 'Klingon'
            on_release: app.lang = 'tlh'

        MySpecialLabel:
            color: [1.0, 0.5, 0.5, 1.0]

